<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ảnh sinh viên -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:layout_gravity="center"
            android:src="@drawable/vannam"
            app:civ_border_color="@android:color/holo_blue_dark"
            app:civ_border_width="4dp" />

        <!-- Tên sinh viên -->
        <TextView
            android:id="@+id/studentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Võ Văn Nam"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Mã sinh viên -->
        <TextView
            android:id="@+id/studentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22110379"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập chuỗi"
            android:inputType="text"
            android:layout_marginTop="16dp"/>

        <!-- Button để xử lý chuỗi -->
        <Button
            android:id="@+id/processButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xử lý"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- TextView để hiển thị kết quả -->
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết quả sẽ hiển thị ở đây"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>