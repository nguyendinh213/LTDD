<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:srcCompat="@drawable/top_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_xinchao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Xin chào"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/text_xinchao"
                    android:layout_marginTop="40dp"
                    android:text="Hữu Trung"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/profile" />
            </FrameLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/botrontrang"
                android:gravity="bottom">

                <TableRow
                    android:layout_gravity="center"
                    android:gravity="center"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bgicon1"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/trongsuot"
                            android:contentDescription="Enter How Much Cookies You Want"
                            app:srcCompat="@drawable/video_call"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/baloo_thambi"
                            android:gravity="center"
                            android:text="Video Call"
                            android:textSize="15sp"
                            android:textStyle="italic"

                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bgicon1"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/trongsuot"
                            android:contentDescription="Enter How Much Cookies You Want"
                            app:srcCompat="@drawable/notification"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/baloo_thambi"
                            android:gravity="center"
                            android:text="Notification"
                            android:textSize="15sp"
                            android:textStyle="italic"

                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bgicon1"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/trongsuot"
                            android:contentDescription="Enter How Much Cookies You Want"
                            app:srcCompat="@drawable/voice_call"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/baloo_thambi"
                            android:gravity="center"
                            android:text="Voice Call"
                            android:textSize="15sp"
                            android:textStyle="italic"

                            tools:ignore="HardcodedText" />
                    </LinearLayout>


                </TableRow>
            </TableLayout>


        </FrameLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/botrontrang"
            android:drawableEnd="@drawable/search_icon"
            android:hint=""
            android:padding="6dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/loang"
            android:drawableEnd="@drawable/logo"
            android:padding="15dp"
            android:text="To Get Unlimited\nUpgrade Your Account" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <!--        android:collapseColumns="1,2" an cot 1,2-->
            <!--        android:stretchColumns="0" gian deu cot 0, * thi gian all-->

            <TableRow
                android:layout_width="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <!--                android:layout_span="2" chiem 2 cot-->
                    <ImageView
                        android:id="@+id/inbox_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/botrontrang2"
                        android:padding="13dp"
                        android:src="@drawable/ic_1" />

                    <TextView
                        android:id="@+id/inbox_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Inbox"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/map_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/botrontrang2"
                        android:padding="17dp"
                        android:src="@drawable/ic_2" />

                    <TextView
                        android:id="@+id/map_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Map"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/chat_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/botrontrang2"
                        android:padding="17dp"
                        android:src="@drawable/ic_3" />

                    <TextView
                        android:id="@+id/chat_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Chat"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/report_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/botrontrang2"
                        android:padding="17dp"
                        android:src="@drawable/ic_4" />

                    <TextView
                        android:id="@+id/report_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Report"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <!--                android:layout_span="2" chiem 2 cot-->
                    <ImageView
                        android:id="@+id/calendar_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/botrontrang2"
                        android:padding="13dp"
                        android:src="@drawable/ic_5" />

                    <TextView
                        android:id="@+id/calendar_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Calendar"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/tip_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/botrontrang2"
                        android:padding="17dp"
                        android:src="@drawable/ic_6" />

                    <TextView
                        android:id="@+id/tip_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Tips"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/settings_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/botrontrang2"
                        android:padding="17dp"
                        android:src="@drawable/ic_7" />

                    <TextView
                        android:id="@+id/settings_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Settings"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/other_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/botrontrang2"
                        android:padding="17dp"
                        android:src="@drawable/ic_8" />

                    <TextView
                        android:id="@+id/other_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Other"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>


        </TableLayout>

    </LinearLayout>

</FrameLayout>



